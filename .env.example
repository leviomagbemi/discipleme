# DiscipleMe Environment Variables
# Copy this file to .env and fill in your values

# Firebase Configuration (from Firebase Console > Project Settings)
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789
VITE_FIREBASE_APP_ID=1:123456789:web:abcdef

# Firebase Functions URL (optional, defaults to us-central1)
# VITE_FIREBASE_FUNCTIONS_URL=https://us-central1-your-project.cloudfunctions.net

# Paystack Public Key (from Paystack Dashboard)
VITE_PAYSTACK_PUBLIC_KEY=pk_test_xxxxx

# Development Options
# Set to 'true' to connect to Firebase Emulators
VITE_USE_EMULATORS=false
