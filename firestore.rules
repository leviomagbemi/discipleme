rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only read/write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Subcollection for mastered verses
      match /mastered_verses/{verseId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Cloud Functions can write to any user (for webhooks)
    // This is handled by admin SDK which bypasses rules
  }
}
